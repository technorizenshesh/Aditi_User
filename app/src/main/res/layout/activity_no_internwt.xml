<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_background_main"
    android:layout_height="match_parent"
    tools:context=".ui.activity.No_Internet">

    <View
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingBottom="15dp"
        android:id="@+id/view"/>

    <ImageView
        android:id="@+id/img"
        android:layout_marginVertical="40dp"
        android:layout_below="@id/view"
         android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/internetlost"/>

    <TextView
        android:gravity="center"
        android:layout_below="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Internet Connection"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:fontFamily="@font/bold"
        android:id="@+id/no_internet"/>

    <TextView
        android:id="@+id/text"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="40dp"
        android:gravity="center"
        android:layout_below="@+id/no_internet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You are not connected to the internet.Make sure your mobile data/ Wi-Fi is on, Airplane Mode is off and try again."
        android:textSize="18sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/regular"
        />

    <LinearLayout
        android:layout_centerInParent="true"
         android:layout_below="@id/text"
         android:background="@drawable/bg_solid_red"
        android:layout_width="wrap_content"
         android:layout_height="wrap_content">

        <TextView
            android:layout_marginHorizontal="40dp"
            android:gravity="center"
            android:layout_marginVertical="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:text="RETRY"
            android:id="@+id/tv_retry"
            android:textColor="@color/white"
            android:textSize="14sp" />


    </LinearLayout>



</RelativeLayout>